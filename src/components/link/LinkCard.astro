---
/**
 * LinkCard コンポーネント
 *
 * URLからOGP（Open Graph Protocol）情報を取得し、リッチなリンクカードを表示する。
 *
 * @example MDXファイルでの使用
 * ```mdx
 * import LinkCard from '../../components/link/LinkCard.astro';
 *
 * <LinkCard url="https://example.com" />
 * ```
 *
 * @features
 * - ビルド時にOGP情報を自動取得（SSG）
 * - OGPタグが無い場合は<title>や<meta>にフォールバック
 * - 取得失敗時はシンプルなテキストリンクを表示
 * - レスポンシブデザイン（デスクトップ: 横並び、モバイル: 縦積み）
 * - ダークテーマ対応
 *
 * @props
 * - url: リンク先のURL（必須）
 *
 * @note
 * - OGP取得はビルド時に実行されるため、ページ読み込み速度に影響しない
 * - 外部サイトの変更はビルド後には反映されない
 * - 多数のLinkCardを使用するとビルド時間が増加する可能性がある
 */
import { fetchOGP, type OGPData } from "../../lib/ogp";

interface Props {
  url: string;
}

const { url }: Props = Astro.props;

// ビルド時にOGPを取得
const ogp: OGPData | null = await fetchOGP(url);

// OGP取得に失敗した場合はシンプルなリンクにフォールバック
if (!ogp) {
  console.warn(`OGP fetch failed for ${url}, falling back to simple link`);
}
---

{
  ogp ? (
    <a
      href={url}
      target="_blank"
      rel="noopener noreferrer"
      class="link-card"
    >
      <div class="link-card-content">
        <div class="link-card-text">
          <div class="link-card-title">{ogp.title}</div>
          {ogp.description && (
            <div class="link-card-description">{ogp.description}</div>
          )}
          <div class="link-card-url">
            {ogp.favicon && (
              <img
                src={ogp.favicon}
                alt=""
                class="link-card-favicon"
                loading="lazy"
              />
            )}
            <span>{new URL(url).hostname}</span>
          </div>
        </div>
        {ogp.image && (
          <div class="link-card-image">
            <img src={ogp.image} alt={ogp.title} loading="lazy" />
          </div>
        )}
      </div>
    </a>
  ) : (
    <a
      href={url}
      target="_blank"
      rel="noopener noreferrer"
      class="link-card-fallback"
    >
      {url}
    </a>
  )
}

<style>
  .link-card {
    display: block;
    border: 1px solid rgb(55 65 81);
    border-radius: 0.5rem;
    overflow: hidden;
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    background: rgb(17 24 39);
    margin: 1.5rem 0;
  }

  .link-card:hover {
    border-color: rgb(0 217 255);
    box-shadow: 0 0 20px rgba(0, 217, 255, 0.2);
    transform: translateY(-2px);
  }

  .link-card-content {
    display: flex;
    gap: 1rem;
    padding: 1rem;
  }

  .link-card-text {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .link-card-title {
    font-weight: 600;
    font-size: 1.125rem;
    color: rgb(0 217 255);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 1.4;
  }

  .link-card-description {
    color: rgb(156 163 175);
    font-size: 0.875rem;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 1.5;
  }

  .link-card-url {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgb(107 114 128);
    font-size: 0.75rem;
    margin-top: auto;
  }

  .link-card-favicon {
    width: 16px;
    height: 16px;
    object-fit: contain;
  }

  .link-card-image {
    flex-shrink: 0;
    width: 120px;
    height: 120px;
    overflow: hidden;
    border-radius: 0.25rem;
    background: rgb(31 41 55);
  }

  .link-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .link-card-fallback {
    display: inline-block;
    color: rgb(0 217 255);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .link-card-fallback:hover {
    color: rgb(77 234 255);
  }

  /* レスポンシブ対応 */
  @media (max-width: 640px) {
    .link-card-content {
      flex-direction: column-reverse;
    }

    .link-card-image {
      width: 100%;
      height: 160px;
    }
  }
</style>
